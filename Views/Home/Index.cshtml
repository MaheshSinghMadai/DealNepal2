<!--Home Index-->

@model IEnumerable<UserManagement.Models.Products>
<!-- ----featured Products start--------- -->
@{ ViewBag.Title = "Home Page"; }

<!--Search Bar-->
<div class="container bg-light" style="margin-top:30px;background-color:darkgrey;height:130px;">
    <div class="row height d-flex justify-content-center align-items-center">
        <div class="col-md-8" style="margin:30px;">
            <form asp-controller="Home" asp-action="Search">
                <div class="search" >
                    <i class="fa fa-search"></i>
                    <input type="text" class="form-control" name="searchByName" placeholder="Search for the Products">
                    <button type="button" class="btn btn-success active">Search</button>
                </div>  
            </form>
        </div>
    </div>
</div>
<br />

<!--Slider-->
<div id="carouselExampleControls" class="carousel slide slide z-depth-1-half" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/slider/art.jpg" alt="First slide"
                 style="height:400px;width:auto">
            <div class="carousel-caption d-none d-md-block">
                <h2>Art </h2>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/slider/OldCoin.jpg" alt="Second slide"
                 style="height:400px;width:auto">
            <div class="carousel-caption d-none d-md-block">
                <h2 style="color:white">Old Coins </h2>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/slider/jwel.jpg" alt="Third slide"
                 style="height:400px;width:auto">
            <div class="carousel-caption d-none d-md-block">
                <h2 style="color:green">Jwelleries </h2>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />
<br />

<!----Featured Products-->
<section class="features3 cid-sDUtVF80ox" id="features3-g">
    <div class="mbr-section-head">
        <h4 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
            <strong>Featured</strong>
        </h4>
    </div>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <span class="custom-badge text-uppercase">See More</span>
        </div>
        <div class="row" style="">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card" style="height: 415px; margin-bottom: 10px">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex flex-row align-items-center time">
                                <i class="fa fa-clock-o"></i>
                                <small class="ml-1">@Html.DisplayFor(modelItem => item.EndTime) Hours</small>
                            </div> <img src="https://i.imgur.com/suuFVrQ.png" width="20">
                        </div>
                        <div class="text-center">
                            <img src="@("~/image/" + item.ProductName)" asp-append-version="true"
                                 width="250" height="230">
                        </div>
                        <div class="text-center">
                            <h5>@Html.DisplayFor(modelItem => item.ProductName)</h5>
                            <span class="text-success">
                                Starts from NRS. @Html.DisplayFor(modelItem => item.MinPrice)
                            </span>
                        </div>
                        <br />
                        <a class="btn btn-info" asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductID"
                           role="button">
                            See details
                        </a>
                    </div>
                </div>
            }
        </div>
        <br />
    </div>
</section>

<script type="text/javascript">
    $('.carousel').carousel({
        interval: 1
    })
</script>