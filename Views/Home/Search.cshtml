@model IEnumerable<UserManagement.Models.Products>

<h2><strong>Search Results</strong></h2>
<br />


<!--ProductDisplay Section-->
<div class="container mt-5">
    <div class="row" style="">
        @foreach (var item in Model)
        {
<div class="col-md-4">
    <div class="card" style="height: 420px; margin-bottom: 10px">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex flex-row align-items-center time">
                <i class="fa fa-clock-o"></i>
                <small class="ml-1">@Html.DisplayFor(modelItem => item.EndTime) Hours</small>
            </div> <img src="https://i.imgur.com/suuFVrQ.png" width="20">
        </div>
        <div class="text-center"> <img src="@("~/image/" + item.ImageName)" asp-append-version="true" 
                                       width="250" height="230"> </div>
        <div class="text-center">
            <h5>@Html.DisplayFor(modelItem => item.ImageName)</h5>
            <span class="text-success">
                Starts from NRS. @Html.DisplayFor(modelItem => item.MinPrice)
            </span>
        </div>
        <br />
        <a class="btn btn-info" asp-controller="Product" asp-action="Details" asp-route-id="@item.ImageID"
           role="button">See details</a>
    </div>
</div>}
    </div>
    <br />
</div>