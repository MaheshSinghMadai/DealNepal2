@model IEnumerable<UserManagement.Models.Products>

@{
    ViewData["Title"] = "MyAuction";
}

<br />
<p>
    <a class="btn btn-info" asp-action="Create"asp-controller="Home">Create New Auction</a>
</p>
@{ 
    if(TempData["AlertMessage"]!= null)
    {
        <div class="alert alert-success">
            <strong>@TempData["AlertMessage"]</strong>
        </div>
    }
}

<hr />
<h1 style="color: #333;font-family:monospace">My Auctions</h1>


<table class="table table-hover table-striped">
    <thead style="color:#333">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPrice)
            </th>
 
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LatestBid)
            </th>         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPrice)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LatestBid)
            </td>
            
            <td>
               
                <a asp-action="Details" asp-controller="Product" asp-route-id="@item.ProductID">Details</a>
          
            </td>
        </tr>
}
    </tbody>
</table>
