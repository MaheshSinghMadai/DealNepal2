<body>
    <div class="container bg-light" style="background-color:darkgrey;font-family:Lato,sans-serif;">
        <div class="col-md-8" style="margin:50px;">
    </div>
    <header style="margin-top:30px;">    
       <nav class="navbar navbar-expand-lg fixed-top" style="width:100%;font-family:Verdana;border-bottom:groove;">
            <div class="container">
                <a class="navbar-brand text-black" asp-action="Index" asp-controller="Home">
                    <img src="/DealNepal.png" style="height:60px;width:120px"/>
                    </a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nvbCollapse" aria-controls="nvbCollapse">
				<span class="navbar-toggler-icon"></span>
			</button>
            <div class="collapse navbar-collapse" id="nvbCollapse" style="position:absolute;left:40%;">
                    <ul class="navbar-nav ml-auto" style="align-items:center;">        
					<li class="nav-item pl-1" style="padding:8px;margin-right:15px;">
						<a asp-controller="Home" asp-action="Index" style="color:#333;font-size:15px;">
                           Home</a>
					</li >
                    <li>
                    <div class="dropdown show">
                          <a class="btn dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                          style="color:#333;margin-right:15px;font-size:15px;" >
                              Products
                          </a>

                          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="padding:8px;">
                             <a asp-controller="Product" asp-action="Coins"style="color:#333;font-size:15px;" >Coins</a>
                               <div class="dropdown-divider"></div>
                                <a asp-controller="Product" asp-action="Furniture" style="color:#333;font-size:15px;">Furniture</a>
                              <div class="dropdown-divider"></div>
                                <a asp-controller="Product" asp-action="Jewellery" style="color:#333;font-size:15px;" >Jewellery</a>
                               <div class="dropdown-divider"></div>
                                <a asp-controller="Product" asp-action="Art" style="color:#333;font-size:15px;">Art</a>
                          </div>
                    </div>
                      </li>
                       
                       <li class="nav-item pl-1" style="padding:8px;">
						<a asp-controller="About" asp-action="Index" style="color:#333;font-size:15px;">
                          About</a>
					</li>
                        <li style="float:right;margin-right:80px"><partial name="_profile" /></li>
                    </ul>
            </div>
               <div class="collapse navbar-collapse" id="nvbCollapse"style="position:absolute;left:78%;">
                      <partial name="_LoginPartial" />
                      </div>
            </div>
        </nav>
   
    </header>
    </div>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 
    <!-- Footer -->
    <footer class="text-center text-lg-start bg-light text-muted" style="position: relative; background-color: #9933CC;">
