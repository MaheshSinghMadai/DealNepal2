<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DealNepal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="~/css/mystyle.css" />
    <link rel="stylesheet" href="~/css/SearchBar.css" />
    <link rel="stylesheet" href="~/css/Text.css" />
    <link rel="stylesheet" href="~/css/FeaturedProduct.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/slider.css" />
    <link rel="stylesheet" href="~/css/aboutus.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">

</head>
<body>
    <header>
        <div class="container" style="background-color:lightgrey;">

        </div>
       <nav class="navbar navbar-expand-lg" style="margin:20px;width:stretch;">
            <div class="container">
                <a class="navbar-brand text-black" asp-action="Index" asp-controller="Home"><i class="fa fa-shopping-cart fa-lg mr-2"></i>DealNepal</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nvbCollapse" aria-controls="nvbCollapse">
				<span class="navbar-toggler-icon"></span>
			</button>
            <div class="collapse navbar-collapse" id="nvbCollapse" style="position:absolute;left:35%;">
                    <ul class="navbar-nav ml-auto">        
					<li class="nav-item pl-1" style="padding:10px;">
						<a asp-controller="Home" asp-action="Index"><i class="fa fa-home fa-fw mr-1"></i>Home</a>
					</li >
                    <li>
                    <div class="dropdown show">
                          <a class="btn dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                          style="color: #24a0ed;" >
                          
                            <i class="fa fa-list"></i>
                              Products
                          </a>

                          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                             <a asp-controller="Product" asp-action="Coins" >Coins</a>
                               <div class="dropdown-divider"></div>
                                <a asp-controller="Product" asp-action="Furniture" >Furniture</a>
                              <div class="dropdown-divider"></div>
                                <a asp-controller="Product" asp-action="Jewellery" >Jewellery</a>
                               <div class="dropdown-divider"></div>
                                <a asp-controller="Product" asp-action="Art" style="color:grey;">Art</a>
                              <div class="dropdown-divider"></div>
                          </div>
                    </div>
                      </li>
                       
                       <li class="nav-item pl-1" style="padding:10px;">
						<a asp-controller="About" asp-action="Index"><i class="fa fa-info-circle fa-fw mr-1"></i>About</a>
					</li>
                        <li style="float:right;margin-right:80px"><partial name="_profile" /></li>
                    </ul>
            </div>
               <div class="collapse navbar-collapse" id="nvbCollapse"style="position:absolute;left:80%;">
                      <partial name="_LoginPartial" />
                      </div>
            </div>
        </nav>
    </header>
    
    <div class="container" style="height:100%">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 
    <!-- Footer -->
    <footer class="text-center text-lg-start bg-light text-muted" style="position: relative; background-color: #9933CC;">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
            <!-- Left -->
            <div class="col-md-6">
                <span>Get connected with us on social networks:</span>
            </div>
            <!-- Left -->
            <!-- Right -->
            <div class="col-md-6">
                <a href="" class="col-md-2 text-reset">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="" class="col-md-2  text-reset">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="col-md-2  text-reset">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="col-md-2  text-reset">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="" class="col-md-2  text-reset">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-github"></i>
                </a>
            </div>
            <!-- Right -->
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>DealNepal
                        </h6>
                        <p>
                            An online auction web platform to get the best deals in the country.
                            Bid now and make it yours.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Products
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Arts</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Jwellery</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Coins</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Furniture</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Useful links
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Pricing</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Settings</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Orders</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Help</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Contact
                        </h6>
                        <p><i class="fas fa-home me-3"></i> Durbarmag, Kathmandu</p>
                        <p>
                            <i class="fas fa-envelope me-3"></i>
                            dealnepal@auction.com
                        </p>
                        <p><i class="fas fa-phone me-3"></i> + 977 9810 999 999</p>
                        <p><i class="fas fa-print me-3"></i> + 977 014 456 233</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2021 Copyright: DealNepal
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
