@using Microsoft.AspNetCore.Identity
@model UserManagement.Models.Bid
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Bid";
}

    @if (SignInManager.IsSignedIn(User))
{
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Bid">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="BidAmount" class="control-label"></label>
                    <input asp-for="BidAmount" class="form-control" />
                    <span asp-validation-for="BidAmount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Bid" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login" style="color:#008000;font-size:15px;">
                 <i class="fa fa-unlock-alt" style="color:#008000"></i>
                Login</a>

}

<div>
    <a asp-action="Details" asp-controller="Products">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
