@model UserManagement.Models.Products
    <!--Section: Block Content-->
    <section class="mb-5">
        <div class="row">
            <div class="col-md-6 mb-4 mb-md-0">
                <div id="mdb-lightbox-ui"></div>
                <div class="mdb-lightbox">
                  <div class="row product-gallery mx-1">
                        <div class="col-12 mb-0">
                            <figure class="view overlay rounded z-depth-1 main-img">
                                <a href="@Url.Content("~/image/"+Model.ImageName)" 
                                   data-size="710x823">
                                    <img src="@Url.Content("~/image/"+Model.ImageName)" asp-append-version="true"
                                         class="img-fluid z-depth-1" />
                                </a>
                            </figure>
                           
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-3">
                                    <div class="view overlay rounded z-depth-1 gallery-item">
                                        <img src="@Url.Content("~/image/"+Model.ImageName)"
                                             class="img-fluid">
                                        <div class="mask rgba-white-slight"></div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="view overlay rounded z-depth-1 gallery-item">
                                        <img src="@Url.Content("~/image/"+Model.ImageName)"
                                             class="img-fluid">
                                        <div class="mask rgba-white-slight"></div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="view overlay rounded z-depth-1 gallery-item">
                                        <img src="@Url.Content("~/image/"+Model.ImageName)"
                                             class="img-fluid">
                                        <div class="mask rgba-white-slight"></div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="view overlay rounded z-depth-1 gallery-item">
                                        <img src="@Url.Content("~/image/"+Model.ImageName)"
                                             class="img-fluid">
                                        <div class="mask rgba-white-slight"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-md-6">
                <h5>@Html.DisplayFor(model => model.ImageName)</h5>
                <p class="mb-2 text-muted text-uppercase small">@Html.DisplayFor(model => model.Category)</p>
                 
                <div class="rating">
                    <span class="fas fa-star"></span>
                    <span class="fas fa-star"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                </div>
                <br />
                <p><span class="mr-1">
                       <strong>NRS. @Html.DisplayFor(model => model.MinPrice) - NRS.@Html.DisplayFor(model => model.MaxPrice)
                           </strong></span></p>
                <p class="pt-1">
                    @Html.DisplayFor(model => model.Description)
                </p>
                <div class="table-responsive">
                    <table class="table table-sm table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="pl-0 w-25" scope="row"><strong>Ends in</strong></th>
                                <td>@Html.DisplayFor(model => model.EndTime) hrs</td>
                            </tr>
                            <tr>
                                <th class="pl-0 w-25" scope="row"><strong>Bids</strong></th>
                                <td>x</td>
                            </tr>
                            <tr>
                                <th class="pl-0 w-25" scope="row"><strong>Seller Location</strong></th>
                                <td>z,y</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr>
                
                <button type="button" class="btn btn-primary btn-md mr-1 mb-2">
                
                Bid now</button>
                <button type="button" class="btn btn-light btn-md mr-1 mb-2">
                    <i class="fas fa-shopping-cart pr-2"></i>Add to cart
                </button>
            </div>
        </div>

    </section>
    <!--Section: Block Content-->

    <script type="text/javascript">
        $(document).ready(function () {
            // MDB Lightbox Init
            $(function () {
                $("#mdb-lightbox-ui").load("mdb-addons/mdb-lightbox-ui.html");
            });
        });
    </script>