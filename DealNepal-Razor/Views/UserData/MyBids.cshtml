@model IEnumerable<UserManagement.ViewModels.BidDetails>

@{
    ViewData["Title"] = "MyBids";
}

<br />
<h1 style="color: #333;font-family:monospace">My Bids</h1>


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                ProductID
            </th>
             <th>
               ProductName
            </th>
            <th>
                BidAmount
            </th>
            <th>
               Timestamp
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.products.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.products.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bids.BidAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bids.Timestamp)
            </td>
            <td>
             
                <a asp-action="Details" asp-controller="Product" asp-route-id="@item.products.ProductID">Details</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
